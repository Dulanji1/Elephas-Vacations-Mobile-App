<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sightseen">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:text="@string/sightseenpagelab1"
        android:textColor="#3D4A9C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="320dp"
        android:layout_height="142dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/sight2" />

    <Button
        android:id="@+id/s1_btn"
        android:layout_width="413dp"
        android:layout_height="68dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:background="#509AAD"
        android:scrollbarStyle="outsideOverlay"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="@string/sightseenpagebut1"
        android:textColor="#111010"
        android:textStyle="bold"
        android:onClick="tapToBounce"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/s2_btn"
        android:layout_width="413dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:background="#509AAD"
        android:scrollbarStyle="outsideOverlay"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="@string/sightseenpagebut2"
        android:textColor="#111010"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s1_btn" />

    <Button
        android:id="@+id/s3_btn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="412dp"
        android:layout_height="73dp"
        android:layout_marginTop="36dp"
        android:background="#509AAD"
        android:scrollbarStyle="outsideOverlay"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="@string/sightseenpagebut3"
        android:textColor="#111010"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s2_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>